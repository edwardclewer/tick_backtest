schema_version: "1.0"
metrics:
  - name: z30m
    type: zscore
    enabled: true
    params:
      lookback_seconds: 1800

  - name: z5m
    type: zscore
    enabled: true
    params:
      lookback_seconds: 300

  - name: ewma_vol_5m
    type: ewma_vol
    enabled: true
    params:
      tau_seconds: 300
      percentile_horizon_seconds: 300
      bins: 256
      base_vol: 0.0001
      stddev_cap: 5.0

  - name: ewma_vol_30m
    type: ewma_vol
    enabled: true
    params:
      tau_seconds: 1800
      percentile_horizon_seconds: 1800
      bins: 256
      base_vol: 0.0001
      stddev_cap: 5.0

  - name: session
    type: session
    enabled: true
    params: {}

  - name: drift_sign
    type: drift_sign
    enabled: true
    params:
      lookback_seconds: 1800

  - name: ewma_mid_5m
    type: ewma
    enabled: true
    params:
      tau_seconds: 300
      price_field: mid

  - name: ewma_mid_5m_slope
    type: ewma_slope
    enabled: true
    params:
      tau_seconds: 300
      window_seconds: 60
      price_field: mid

  - name: spread_60s
    type: spread
    enabled: true
    params:
      pip_size: 0.0001
      window_seconds: 60

  - name: tick_rate_30s
    type: tick_rate
    enabled: true
    params:
      window_seconds: 30
